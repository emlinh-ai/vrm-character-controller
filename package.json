{
  "name": "@emlinh/vrm-character-controller",
  "version": "2.0.0",
  "description": "Reusable VRM 3D Character Controller with animations, expressions, and lipsync",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist --skipLibCheck",
    "dev": "tsc --watch",
    "clean": "rmdir /s /q dist || echo done",
    "prepublishOnly": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "release": "node scripts/release.js",
    "release:patch": "npm run release patch",
    "release:minor": "npm run release minor",
    "release:major": "npm run release major",
    "bundlesize": "bundlesize"
  },
  "peerDependencies": {
    "@pixiv/three-vrm": "^3.0.0",
    "@pixiv/three-vrm-animation": "^3.0.0",
    "@react-three/drei": "^9.0.0",
    "@react-three/fiber": "^8.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/three": "^0.160.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.0.0",
    "bundlesize": "^0.18.1"
  },
  "keywords": [
    "vrm",
    "3d",
    "character",
    "animation",
    "lipsync",
    "react",
    "three.js",
    "vrma",
    "fbx",
    "mixamo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/emlinh/vrm-character-controller.git"
  },
  "homepage": "https://github.com/emlinh/vrm-character-controller#readme",
  "bugs": {
    "url": "https://github.com/emlinh/vrm-character-controller/issues"
  },
  "author": "Emlinh Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}